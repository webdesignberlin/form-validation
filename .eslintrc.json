{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "linebreak-style": [
      "off"
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ]
  },
  "globals": {
    "it": true,
    "describe": true
  }
}
